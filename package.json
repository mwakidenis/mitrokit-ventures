{
  "name": "mitrokit-ventures",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:next && npm run build:cloudflare",
    "build:next": "next build",
    "build:cloudflare": "npx @cloudflare/next-on-pages",
    "preview": "npx @cloudflare/next-on-pages --preview",
    "deploy": "npm run build && npx wrangler deploy",
    "deploy:preview": "npm run build && npx wrangler deploy --preview",
    "dev:cloudflare": "npx @cloudflare/next-on-pages --watch",
    "lint": "next lint",
    "db:create": "npx wrangler d1 create mitrokit-ventures",
    "db:push": "npx wrangler d1 execute mitrokit-ventures --local --file=./database-schema.sql",
    "db:generate": "echo 'No Prisma needed for D1'"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.4.2",
    "@cloudflare/next-on-pages": "^1.13.16",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.2.4",
    "gray-matter": "^4.0.3",
    "jose": "^6.1.3",
    "lucide-react": "^0.378.0",
    "next": "^15.1.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.4",
    "remark": "^15.0.1",
    "remark-html": "^16.0.0",
    "tailwind-merge": "^2.3.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240620.0",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "wrangler": "^3.60.0"
  }
}
